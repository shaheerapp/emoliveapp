{
  "extends": "@react-native/typescript-config/",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "index.ts", "index.tsx", "react-native.config.js"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
